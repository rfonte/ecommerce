<h1>Forgot Password ?</h1>

<% form_for(@forgot_pass) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :old_pass %><br />
    <%= f.text_field :old_pass %>
  </p>
  <p>
    <%= f.label :new_pass %><br />
    <%= f.text_field :new_pass %>
  </p>
  <p>
    <%= f.label :new_pass_again %><br />
    <%= f.text_field :new_pass_again %>
  </p>
  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>

<%= link_to 'Back', sessions_path %>

