<table>
  <tr>
    <th>ID</th>
    <th>Login</th>
    <th>Password</th>
    <th>Name</th>
    <th>Email</th>
    <th>Last login</th>
  </tr>

<% for user in @users %>
  <tr>
    <td><%=h user.id %></td>
    <td><%=h user.login %></td>
    <td><%=h user.password %></td>
    <td><%=h user.name %></td>
    <td><%=h user.email %></td>
    <td><%=h user.last_login %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

