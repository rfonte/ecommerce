<h1>Lista de User / Roles</h1>

<table>
  <tr>
    <th>Id user</th>
    <th>Id role</th>
  </tr>

<% for user_role in @user_roles %>
  <tr>
    <td><%=h user_role.user_id %></td>
    <td><%=h user_role.role_id %></td>
    <td><%= link_to 'Edit', edit_user_role_path(user_role) %></td>
    <td><%= link_to 'Destroy', user_role, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<p class="createNew"><%= link_to 'New user_role', new_user_role_path %></p>
<p class="pageBack"><%= link_to 'Voltar ao Painel de Controle', control_panels_path %></p>

